{
    "builders": [
        {
            "ami_name": "packer-linux-aws-redhat-{{timestamp}}",
            "instance_type": "t2.micro",
            "region": "us-east-1",
            "type": "amazon-ebs",
            "source_ami_filter": {
              "filters": {
                "name": "RHEL-7.5_HVM_GA*",
